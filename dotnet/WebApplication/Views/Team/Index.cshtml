@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine">@*Шрифт*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body @*style="background-color: LightGray;" *@>

    <div class="alerts">

    </div>
    @*<h1>Hello!</h1>
        <h3>@ViewData["IP"]</h3>
        <h3>@ViewData["MachineName"]</h3>
        <h3>@ViewData["User"]</h3>*@

    <div>
        <div class="row" style="margin-bottom:50px">
            <div class="col-sm-12 col-lg-8">

                <div class="w3-card-4 w3-center" style="width:100%">
                    <img src="~/img/newYearBackground.jpg" alt="New Year 2019" style="width:100%">
                    <div class="w3-container w3-center">
                        <h1 class="w3-xxxlarge" style="font-family: 'Tangerine', serif;">Happy New Year!</h1>
                    </div>
                </div>

                <br />

                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="">Полезные ссылки</h3>
                        <hr />
                        <div class="text-center">
                            <button type="button" class="btn btn-link">Google</button>
                            <button type="button" class="btn btn-link">Google Translate</button>
                        </div><br />

                        <div class="container text-center">
                            @{
                                List<Link> links = ViewBag.Links;
                                var generalLinks = links.Where(lnk => lnk.Id == 0);
                                                                
                                foreach (var link in generalLinks)
                                {
                                    <a href="@link.Url" type="button" class="btn btn-link">@link.Name</a>
                                }
                            }
                        </div>
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <div class="card shadow">
                            <img class="card-img-top" src="~/img/project_demo1.jpg" alt="Card image" style="width:100%">
                            <div class="card-body">
                                <h4 class="card-title">Командный проект #1</h4>
                                <p class="card-text">Описание проекта</p>
                                <button type="button" class="btn btn-link">Link</button>
                                <button type="button" class="btn btn-link">Link</button>
                                <br />
                                <a href="#" class="btn btn-primary">See Profile</a>
                            </div>
                        </div>
                        <br />
                    </div>
                    <div class="col-sm-12 col-lg-6">
                        <div class="card shadow">
                            <img class="card-img-top" src="~/img/project_demo1.jpg" alt="Card image" style="width:100%">
                            <div class="card-body">
                                <h4 class="card-title">Командный проект #2</h4>
                                <p class="card-text">Описание проекта</p>
                                <button type="button" class="btn btn-link">Link</button>
                                <button type="button" class="btn btn-link">Link</button>
                                <br />
                                <a href="#" class="btn btn-primary">See Profile</a>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
                <br />
            </div>

            <div class="col-sm-12 col-lg-4">
                <div class="alert alert-primary alert-dismissible shadow">
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                    <h5>Нужна квартира?</h5>
                    <hr />
                    <p class="text-center">Я продаю только то, что купил бы сам!</p>
                </div>

                <div class="card text-center shadow">
                    <div class="card-body">
                        <h5 title="Author" data-toggle="popover"
                            data-placement="bottom" data-trigger="hover"
                            data-content=@ViewBag.Quote.Author>
                            @ViewBag.Quote.Text
                        </h5>
                    </div>
                </div>

                <br />

                <div class="card shadow">
                    <div class="card-body">
                        <h5>Ближайшие дни рождения</h5>
                        <hr />
                        <h6>В разработке.</h6>
                    </div>
                </div>

                <br />

                <div class="card shadow">
                    <div class="card-body">
                        <h5>Ближайшие отпуска</h5>
                        <hr />
                        <h6>В разработке.</h6>
                    </div>
                </div>

                <br />

                <div class="card shadow">
                    <div class="card-body">
                        <h5>Последние блиты</h5>
                        <hr />
                        <div class="media border p-3">
                            <img src="~/img/Users/admin.png" alt="Admin" class="mr-3 mt-3 rounded-circle text-center" style="width:60px;">
                            <div class="media-body">
                                <h6>Кукушкин Алексей Александрович <small><i>Posted on December 27, 2018</i></small></h6>
                                <p> My Firs Post 🐦</p>
                            </div>
                        </div>
                        <br />
                        <button class="btn btn-outline-primary btn-block btnOpen" data-toggle="popover" data-placement="top" title="Popover Header" data-content="Some content inside the popover">More...</button>
                    </div>
                </div>

                <script>
                    $(document).ready(function () {
                        $('.btnOpen').click(function () {
                            var danger = "";
                            $('.alerts').html(danger);
                        });

                        $('[data-toggle="popover"]').popover();
                    });
                </script>
            </div>
        </div>
    </div>
</body>
</html>